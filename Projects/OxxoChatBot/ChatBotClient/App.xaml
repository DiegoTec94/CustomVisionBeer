<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ChatBotClient.App">
	<Application.Resources>
        <ResourceDictionary>
            <Style x:Key="IncomingMessageFont"
                   TargetType="{x:Type Label}">
                <Setter Property="TextColor"
                           Value="White"/>
                <Setter Property="FontSize"
                           Value="{DynamicResource MessageFontSize}" />
            </Style>
            <Style x:Key="OutgoingMessageFont"
                   TargetType="{x:Type Label}">
                <Setter Property="TextColor"
                           Value="Black"/>
                <Setter Property="HorizontalTextAlignment"
                        Value="End"/>
                <Setter Property="FontSize"
                           Value="{DynamicResource MessageFontSize}" />
            </Style>

            <OnIdiom x:Key="MessageFontSize" x:TypeArguments="x:Double">
                <OnIdiom.Tablet>25</OnIdiom.Tablet>
                <OnIdiom.Phone>15</OnIdiom.Phone>
            </OnIdiom>
            
            <!--<OnPlatform x:Key="MessageFontSize" x:TypeArguments="x:Double">
                <On Platform="iOS" Value="16" />
                <On Platform="Android" Value="18" />
            </OnPlatform>-->
        </ResourceDictionary>
	</Application.Resources>
</Application>
